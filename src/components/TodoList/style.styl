.todolist
    margin: 10px
    margin-top: 0px
    .todo-item-container
        display: flex
        .todo-item
            display: flex
            border: 1px solid #999
            border-top-width: 0px
            padding: 6px
            background-color: #fff
        .todo-item-toggle
            width: 40px
            height: 40px
            border: 1px solid #000
            border-radius: 20px
            text-align: center
    .done
        color: red
        text-decoration:line-through